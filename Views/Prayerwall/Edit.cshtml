@model Stock_system.Models.Prayerwall

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Prayerwall</h4>
<hr />
<div class="row" style="background-color: white ">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrayerId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrayerTopic" class="control-label"></label>
                <input asp-for="PrayerTopic" class="form-control" />
                <span asp-validation-for="PrayerTopic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrayerDetails" class="control-label"></label>
                <input asp-for="PrayerDetails" class="form-control" />
                <span asp-validation-for="PrayerDetails" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ScriptureRefs" /> @Html.DisplayNameFor(model => model.ScriptureRefs)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DayRequested" class="control-label"></label>
                <input asp-for="DayRequested" class="form-control" />
                <span asp-validation-for="DayRequested" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

